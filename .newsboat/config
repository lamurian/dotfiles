# general settings
auto-reload no
max-items 50

# externel browser, macro is comma (,)
browser "/usr/bin/w3m %u"
macro m set browser "ts mpv %u"; open-in-browser ; set browser "/usr/bin/w3m %u"
macro o set browser "$BROWSER %u"; open-in-browser ; set browser "/usr/bin/w3m %u"
macro l set browser "mpsyt playurl %u"; open-in-browser ; set browser "/usr/bin/w3m %u"

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K
unbind-key g
unbind-key G

# bind keys - vim style
bind-key j down
bind-key k up
bind-key ^D pagedown
bind-key ^U pageup
bind-key g home
bind-key G end
bind-key l open
bind-key h quit

# Rebind sort from g to s
bind-key s sort
bind-key S rev-sort

# solarized
color background         default   default
color listnormal         default   default
color listnormal_unread  default   default
color listfocus          black     cyan
color listfocus_unread   black     cyan
color info               default   black
color article            default   default

# highlights
highlight article "^(Title):.*$" blue default
highlight article "https?://[^ ]+" red default
highlight article "\\[image\\ [0-9]+\\]" green default
