#!/usr/bin/sh

# Reimplemented from: https://github.com/LukeSmithxyz/voidrice/blob/master/.local/bin/compiler

file=$(readlink -f "$1")
dir=$(dirname "$file")
base="${file%.*}"
ext="$2"

case $file in
        *\.md) pandoc "$file" -o "$base"."$ext" ;;
        *\.Rmd) echo "require(rmarkdown); rmarkdown::render('$file', quiet=TRUE)" | R -q --vanilla ;;
esac
