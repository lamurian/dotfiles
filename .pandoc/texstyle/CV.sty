% Load packages
\usepackage[scaled]{helvet} 	% Helvetica font
\usepackage{enumitem}		% To configure bullet items
\usepackage[compact]{titlesec}	% Change section format

% Configure title and author
\pretitle{\center\fontsize{16}{18}\selectfont\textbf}
\postauthor{\rule{\textwidth}{1pt}}

% Use helvetica font as default
\renewcommand\familydefault{\sfdefault}

% Disable page numbering
\pagenumbering{gobble}

% Define section settings
\titleformat{\section}
{\fontfamily{phv}\fontsize{14}{14}\selectfont\bfseries}
{\thetitle}{0em}{}

\titleformat{\subsection}
{\fontfamily{phv}\fontsize{12}{12}\selectfont\bfseries}
{\thetitle}{0em}{}

\titleformat{\subsubsection}
{\fontfamily{phv}\fontsize{10}{10}\selectfont\bfseries}
{\thetitle}{0em}{}

% Spacing for section
% https://tex.stackexchange.com/questions/108684/spacing-before-and-after-section-titles
\titlespacing*{\section}{0pt}{12pt}{6pt}
\titlespacing*{\subsection}{0pt}{12pt}{2pt}
\titlespacing*{\subsubsection}{0pt}{2pt}{2pt}
