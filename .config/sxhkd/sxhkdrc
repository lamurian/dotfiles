alt + m
	dmenu_run
#
# wm independent hotkeys
#
alt + m
        dmenu_run

alt + Return
        st

# XF86 Keys
XF86AudioMute
	pulsemixer --toggle-mute & ~/bin/vol-stat.sh

XF86Audio{RaiseVolume,LowerVolume}
	pulsemixer --change-volume {+5,-5} --unmute && ~/bin/vol-stat.sh

XF86Audio{Next,Prev,Play}
	mpc {next,prev,toggle}
